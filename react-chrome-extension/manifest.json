{
    "manifest_version": 3,
    "name": "HistoriNaija",
    "version": "1.0.0",
    "permissions": ["language", "scripting", "activeTab"],
    "background": {
      "service_worker": "js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/content.js"]
      }
    ],
    "action": {
      "default_popup": "js/index.html",
      "default_title": "Google AI Challenge"
    }
  }
  